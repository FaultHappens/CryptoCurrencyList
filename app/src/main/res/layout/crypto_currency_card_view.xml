<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5sp"
    app:cardBackgroundColor="#E3E2E2"
    app:cardCornerRadius="20sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cryptoCurrencyLogo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:contentDescription="@string/cryptocurrency_logo"
            tools:src="@drawable/user_default_image"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/cryptoCurrencyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                tools:text="CryptoCurrency Name" />

            <TextView
                android:id="@+id/cryptoCurrencySymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                tools:text="CryptoCurrency Symbol" />


        </LinearLayout>

        <TextView
            android:id="@+id/cryptoCurrencyRank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#de3b12"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="#1" />


    </LinearLayout>
</androidx.cardview.widget.CardView>